@namespace web_test_blazer_server.Shared.Airtable


<Dropdown @ref="dropdown" Display="Display.InlineBlock" Size="Size.ExtraSmall">
    <DropdownToggle Color="Color.Light">
        @SelectedItem
    </DropdownToggle>
    <DropdownMenu>
        <ListGroup Mode="ListGroupMode.Selectable" @bind-SelectedItem="@SelectedItem" >
            <ListGroupItem Name="header" Disabled="true"><Badge Color="Color.Dark"><Icon Name="@IconSelection" />  @Label</Badge></ListGroupItem>
            <SelectorItem Id="id1" Label="item 1" TypeSelection="@TypeSelection" />
            <SelectorItem Id="id2" Label="item 2" TypeSelection="@TypeSelection" />
            <SelectorItem Id="id3" Label="item 3" TypeSelection="@TypeSelection" />
            <SelectorItem Id="id4" Label="item 4" TypeSelection="@TypeSelection" />
            <SelectorItem Id="id5" Label="item 5" TypeSelection="@TypeSelection" />
            <SelectorItem Id="id6" Label="item 6" TypeSelection="@TypeSelection" />
        </ListGroup>
    </DropdownMenu>
</Dropdown>



