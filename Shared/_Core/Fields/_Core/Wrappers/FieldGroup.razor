@namespace  web_test_blazer_server.Shared._Core

<ListGroup Class="field-group">
    <DividerSticky />
    <Container Fluid="true" Background="Background.Light"  Class="rounded-top field-group-header">
        <Row TextColor="TextColor.Black50">
            <Column Flex="Flex.JustifyContent.Start">
                @HeaderLabel
            </Column>
            <Column Flex="Flex.JustifyContent.End" Class="field-group-header-badge-container">
                <Badge Color="Color.Primary">@RowLabel</Badge>
            </Column>
        </Row>
    </Container>
    @ChildContent
</ListGroup>
