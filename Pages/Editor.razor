@page "/editor"

@using web_test_blazer_server.Shared.Airtable
@using web_test_blazer_server.Shared._Editor
@using web_test_blazer_server.Pages

@implements IDisposable
@inject EditorView_Service editorView_Service;
@inject EditorVisibility_Service editorVisibility_Service;



<PageTitle>Editor</PageTitle>
<P_Hidden IdParentMenu="root" IdMenuItem="editor" />

<div class="row">
    @if (editorVisibility_Service.ShowEditor == true)
    {
        <Splitter Style="height: 100vh;">
            <SplitterSection Style="height: 100%;" Size="100">
                <PNL_Website />
            </SplitterSection>
            <SplitterSection MinSize="430" Style="height: 100%;">
                <Splitter Direction="SplitterDirection.Vertical" Style="height: 100%; overflow: hidden; padding: 3px;">
                    <SplitterSection MinSize="120" Style="@editorUpperSplit">
                        <PNL_Selection IdParentMenu="editor" IdMenuItem="selection" />
                    </SplitterSection>
                    <SplitterSection MinSize="250" Style="@editorDownSplit">
                        <PNL_Structure IdParentMenu="editor" IdMenuItem="workspace" />
                    </SplitterSection>
                </Splitter>
            </SplitterSection>
        </Splitter>

    }
    else
    {
        <PNL_Website />
        <div class="open-editor-container">
            <A_ToggleEditorVisibility ButtonVariant="StateVisibility.SetVisible" />
        </div>
    }
</div>